rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only users with admin claim to create or delete products
    match /products/{productId} {
      allow create, delete, update: if request.auth != null && request.auth.token.admin == true;
      allow read, get: if request.auth != null
    }

    match /stockRecord/{recordId} {
      allow delete, update: if false;
      allow read, get: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.admin == true;
    }

    // Restrict deletion of sales
    match /sales/{saleId} { 
      // Allow updates to the returnedId key if the user is an admin
      allow update: if request.auth != null && request.auth.token.admin == true;
      // Allow read, get, and create if the user is authenticated
      allow read, get, create: if request.auth != null;
      // Disallow delete for all users
      allow delete: if false;
    }
  }
}
